<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="90dp"
    android:background="#ececec"
    android:clickable="true"
    android:focusable="false"
    android:id="@+id/singlerow"
    android:onClick="goToInfo">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palace Resort"
        android:id="@+id/resortname"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:textAppearance="?android:textAppearanceLarge"
        android:typeface="monospace"
        android:singleLine="false"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/resortimage"
        android:layout_toEndOf="@+id/resortimage"
        android:layout_alignTop="@+id/resortimage"
        android:layout_above="@+id/resortprice" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit"
        android:id="@+id/Visitbutton"
        android:background="@drawable/buttondesign"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:typeface="monospace"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:contextClickable="true"
        android:focusable="false" />

    <ImageView
        android:layout_width="85dp"
        android:layout_height="77dp"
        android:id="@+id/resortimage"
        android:src="@mipmap/ic_icon"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="900RS"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/resortprice"
        android:layout_alignBottom="@+id/resortimage"
        android:layout_toRightOf="@+id/resortimage"
        android:layout_toEndOf="@+id/resortimage" />

</RelativeLayout>