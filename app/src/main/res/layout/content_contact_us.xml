<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_contact_us"
    tools:context="com.amr.assyahmuhammad.resortsguide.ContactUsActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For complaints or suggestions please contact us at:"
        android:layout_marginTop="65dp"
        android:id="@+id/txt_contactus1"
        android:textColor="#111"
        android:textSize="25dp"
        android:typeface="serif"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail: h.a.n.o@msn.com \nPhone number: 0563952929"
        android:id="@+id/txt_contactus2"
        android:textColor="#001eff"
        android:textSize="25dp"
        android:typeface="serif"
        android:layout_below="@+id/txt_contactus1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you want to add a resort in Resorts Guide Application, please send us an email at:"
        android:id="@+id/txt_contactus3"
        android:textColor="#111"
        android:textSize="25dp"
        android:typeface="serif"
        android:layout_below="@+id/txt_contactus2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="h.a.n.o@msn.com"
        android:id="@+id/txt_contactus4"
        android:textColor="#001eff"
        android:textSize="25dp"
        android:typeface="serif"
        android:layout_below="@+id/txt_contactus3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="false"
        android:textStyle="italic" />
</RelativeLayout>
